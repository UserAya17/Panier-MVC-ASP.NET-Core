@model MyShop.Models.Product
@{
    string action = "";

    if (Model.Id > 0)

    {

        action = "Edit";

        ViewBag.Title = "Admin Product Edit";

    }

    else

    {

        action = "Add";

        ViewBag.Title = "Admin Product Add";

    }
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>Admin @(action) Product</h1>
<div asp-validation-summary="All"></div>
<form asp-controller="Product" asp-action="Add" method="post">
    <div class="row">
        <div class="form-floating mb-3 col">
            <input asp-for="Brand" class="form-control" id="floatingBrand" placeholder="Brand">
            <label asp-for="Brand" for="floatingBrand">Brand</label>
        </div>
        <div class="form-floating mb-3 col">
            <input asp-for="Model" class="form-control" id="floatingModel" placeholder="Model">
            <label asp-for="Model" for="floatingModel">Model</label>
        </div>
        <div class="form-floating mb-3 col">
            <input asp-for="Year" class="form-control" id="floatingYear" placeholder="Year">
            <label asp-for="Year" for="floatingYear">Year</label>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <select class="form-select form-select-lg" asp-for="Type">
                <option value="" selected>Please select a Type</option>
                <option value="Road">Road</option>
                <option value="Mountain">Mountain</option>
                <option value="Hybrid">Hybrid</option>
                <option value="Triathalon">Triathalon</option>
            </select>
        </div>
        <div class="form-floating mb-3 col">
            <input asp-for="Price" class="form-control" id="floatingPrice" placeholder="Price">
            <label asp-for="Price" for="floatingPrice">Price</label>
        </div>
        <div class="form-floating mb-3 col">
            <input asp-for="Color" class="form-control" id="floatingColor" placeholder="Color">
            <label asp-for="Color" for="floatingColor">Color</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add New Product</button>
</form>
